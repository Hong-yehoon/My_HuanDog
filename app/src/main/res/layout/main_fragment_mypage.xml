<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_state_bg_color"
    android:padding="20dp">

    <ImageView
        android:id="@+id/my_ProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_profile"
        />
    <TextView
        android:id="@+id/my_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="user"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/main_state_bg_color"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="2sp"

            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#57131309"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/my_Info"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/My_Info"
                    android:background="@color/white"
                    />
                <Button
                    android:id="@+id/my_Dogs"
                    android:layout_marginTop="1dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/My_Dogs"
                    android:background="@color/white"
                    />
                <Button
                    android:id="@+id/my_Goal"
                    android:layout_marginTop="1dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/My_Gaol"
                    android:background="@color/white"
                    />
                <Button
                    android:id="@+id/my_Feedback"
                    android:layout_marginTop="1dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/My_Feedback"
                    android:background="@color/white"
                    />
                <Button
                    android:id="@+id/my_Withdraw"
                    android:layout_marginTop="1dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/My_Withdraw"
                    android:background="@color/white"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>